<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/itembackground"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/zhengchenggong" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="22dp" >
            <TextView
                android:id="@+id/scenery_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:text="@string/zhengchenggong"
                android:textColor="#4fcb29"
                android:layout_alignParentLeft="true" />

            <RatingBar
                android:id="@+id/ratingBar1"
                style="@style/myRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:clickable="false"
                android:layout_marginLeft="16dp"
                android:focusable="false"
                android:layout_alignParentRight="true"/>
            
        </RelativeLayout>

        <TextView
            android:id="@+id/scenery_brief"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxHeight="54dp"
            android:textColor="#747474"
            android:textSize="11dp"
            android:text="@string/zhengchenggongintroduce" 
            android:scrollbars="vertical"
            android:singleLine="false"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="3dp"/>

    </LinearLayout>
   
</LinearLayout>